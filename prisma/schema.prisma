datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String?
  firstname String?
  lastname  String?
  password  String?
  street    String?
  city      String?
  country   String?
  zipcode   String?
  memberships Membership[]
}

model Group {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  memberships Membership[]
}

model Membership {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  group  Group  @relation(fields: [groupId], references: [id])
  groupId String @db.ObjectId
}

model Referent {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  shopname  String
  shopdesc  String
  phone     String
  website   String?
  firstname String?
  lastname  String?
  photoslider String[]
  street    String
  city      String
  country   String
  zipcode   String
  openingHours OpeningDayHours[]
}

model OpeningDayHours {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  day       String
  opening   String
  closing   String
  lunchStart String?
  lunchEnd   String?
  referent  Referent @relation(fields: [referentId], references: [id])
  referentId String @db.ObjectId
  }
model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  stock       Int
  photo       String
  category    String
  referentId  String? @db.ObjectId
  productOwnerMail String
  }

